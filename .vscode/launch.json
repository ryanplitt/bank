{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Bank Game Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/BankGame/server/index.js",
      "cwd": "${workspaceFolder}/BankGame/server",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
